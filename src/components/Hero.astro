---
const { title = '', subtitle = '', ctaText = '', ctaHref = '/contact' } = Astro.props;
---

<section id="page-hero" class="bg-rose text-white relative overflow-hidden">
	<img id="volute-parallax" src="/logo.svg" alt="" aria-hidden="true" class="pointer-events-none select-none absolute inset-0 m-auto w-[min(50vw,600px)] opacity-20 z-0 animate-float-slow" />

	<div class="section !py-0 flex flex-col items-center justify-center text-center hero-size relative z-10">
		{title && <h1 class="title-hero reveal reveal-slow" data-animate>{title}</h1>}
		{subtitle && <p class="mt-6 uppercase tracking-[0.65em] text-white/90 text-[clamp(0.65rem,1.2vw,1.05rem)] reveal" data-animate>{subtitle}</p>}
		{ctaText && <a href={ctaHref} class="btn btn-onlight mt-9 reveal" data-animate>{ctaText}</a>}
		<slot />
	</div>
</section>
